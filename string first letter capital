// write a program input string and output string first letter capital

// you need to capitalize the kth character of the input string. Ex. kiet output should be Kiet.

#include <stdio.h>
#include <string.h>
int main()
    {
    char ch[100];
    int i;
    gets(ch);
    scanf("%d", &i);
    for(int j=0; j<=strlen(ch); j++)
    {
        if(i==j)
        {
            ch[j]=ch[j]-32;
        }
    }
    printf("%s",ch);
    return 0;
    
    }

